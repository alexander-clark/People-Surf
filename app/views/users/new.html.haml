%h1 Sign up
= form_for(@user, :html => { :class => "bp" }) do |f|
  = render 'shared/error_messages'
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation, "Confirmation"
    = f.password_field :password_confirmation
  .actions
    = f.submit "Sign up"