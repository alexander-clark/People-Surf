<h1>New subject</h1>
<%= form_for @subject do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :parent_id %>
    <%= f.collection_select :parent_id, Subject.all(:order => "name"), :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>